@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="pt-5">
    <h3 class="mb-5">Bu Posta Yapılan Yorumlar</h3>
    @if (Model.Count() == 0)
    {
        <div class="media text-muted">
            <h5>Henüz bu bloğ'a bir yorum yapılmamış. İlk yorumu yapan siz olun!</h5>
        </div>
    }
    else
    {
        <ul class="comment-list">
            @foreach (var item in Model)
            {
                <li class="comment">
                    <div class="vcard">
                        <img src="/miniblog/images/person_1.jpg" alt="Image placeholder">
                    </div>
                    <div class="comment-body">
                        <h3>@item.UserName</h3>
                        <div class="meta">@(((DateTime)item.CommentDate).ToString("dd MMMM yyyy"))</div>
                        <p>@item.CommentText</p>
                    </div>
                </li>
            }
        </ul>
    }
    @Html.Action("LeaveComment", "Comment")
</div>